{
  "info": {
    "name": "CropX API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "API examples for CropX backend"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "Inventory",
      "description": "Manage farm inventories",
      "item": [
        {
          "name": "List Inventories",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/inventory/get"
          }
        },
        {
          "name": "Get Inventory",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/inventory/get/:id"
          }
        },
        {
          "name": "Create Inventory",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Tomatoes\",\n  \"quantity\": 100,\n  \"unit\": \"kg\"\n}"
            },
            "url": "{{base_url}}/api/v1/inventory/create"
          }
        },
        {
          "name": "Update Inventory",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Tomatoes\"\n}"
            },
            "url": "{{base_url}}/api/v1/inventory/update/:id"
          }
        },
        {
          "name": "Delete Inventory",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/api/v1/inventory/delete/:id"
          }
        },
        {
          "name": "Inventory Summary",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/inventory/summary"
          }
        }
      ]
    },
